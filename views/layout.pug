doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)
    title #{title}
    link(rel='shortcut icon', href='/favicon.png')

    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css')
    link(rel='stylesheet', href='/css/lib/bootstrap.min.css')
    link(rel='stylesheet', href='/css/lib/material-kit.css')
    link(rel='stylesheet', href='/css/lib/demo.css')

  body.index-page
    include partials/header

    .wrapper
      .header.header-filter(style="background-image: url('/img/bg2.jpeg');",class=(title == 'Home') ? 'home-page-header' : undefined)
        .container
          .row
            .col-md-8.col-md-offset-2
              .brand
                if title == 'Home'
                  h1 Wow Panic
                  h3(style='text-transform: none') A smart bracelet for preventing harassment.
                  a.btn.btn-primary(href="/signup", style="margin-top: 40px; padding: 15px 40px;")
                    i.fa.fa-rocket
                    | &nbsp; Start Now
      .main.main-raised
        include partials/flash
        block content

        include partials/footer

      script(src='/js/lib/jquery.min.js', type='text/javascript')
      script(src='/js/lib/bootstrap.min.js', type='text/javascript')
      script(src='/js/lib/material.min.js')
      script(src='/js/lib/nouislider.min.js', type='text/javascript')
      script(src='/js/lib/bootstrap-datepicker.js', type='text/javascript')
      script(src='/js/lib/material-kit.js', type='text/javascript')
      script(src='/js/main.js', type='text/javascript')
      script(type='text/javascript').
        $().ready(function(){
        // the body of this function is in /material-kit.js
        materialKit.initSliders();
        window_width = $(window).width();
        if (window_width >= 992){
          big_image = $('.wrapper > .header');
          $(window).on('scroll', materialKitDemo.checkScrollForParallax);
        }
        });

