extends layout

block content
  .section.section-basic
    .container
      .title
        h2 Add Log

    form.form-horizontal(method='POST', action='/logs')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label(class='col-sm-2 control-label', for='latitude') Latitude
        .col-sm-8
          input.form-control(type='text', name='latitude', id='latitude', autofocus=true)
      .form-group
        label(class='col-sm-2 control-label', for='longitude') Longitude
        .col-sm-8
          input.form-control(type='text', name='longitude', id='longitude')
      .form-group
        .col-sm-offset-2.col-sm-8
          button.btn.btn-primary(type='submit')
            i.fa.fa-check
            | &nbsp;Add
